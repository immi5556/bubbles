    <script>
        //var apiurl = "http://localhost:57867";
        var apiurl = "https://whatsup.immanuel.co";
        var instance, drinst, prginst, cdinst, pginst;
        document.addEventListener('DOMContentLoaded', function () {
            var elems = document.querySelectorAll('#modal1');
            instance = M.Modal.init(elems, {})[0];
            //instance.open();

            var prgelms = document.querySelectorAll('#prog-modal');
            prginst = M.Modal.init(prgelms, { dismissible: false })[0];
            prginst.open();

            var drelem = document.querySelectorAll('.defaultCountry');
            drinst = M.FormSelect.init(drelem, {})[0];
            //drinst.open();

            var cdelem = document.querySelectorAll('#modalCde');
            cdinst = M.Modal.init(cdelem, { dismissible: false })[0];

            var pgelem = document.querySelectorAll('#modalPgs');
            pginst = M.Modal.init(pgelem, { dismissible: false })[0];
        });

        function generatecode() {
            //phoneNumberParser();
            var ret = ph.validate(document.getElementById("phoneNumber").value || "");
            var nick = (document.getElementById("nickName").value || "Nickname");
            //var msg = document.getElementById("output").value || "";
            if (ret.error) {
                alert(ret.msg);
            } else {
                prginst.open();
                fetch(apiurl + '/api/sms/'
                    + encodeURIComponent((ret.ccd.dial_code || '').split('+').join(''))
                    + '/' + encodeURIComponent(ret.cry)
                    + '/' + encodeURIComponent(ret.phn)
                    + '/' + encodeURIComponent(nick)).then(resp => {
                    return resp.json();
                }).then(resp => {
                    if (!resp.Error) {
                        prginst.close();
                        instance.close();
                        cdinst.open();
                    } else {
                        prginst.close();
                        alert('SMS gateway error.. please try again after some time');
                    }
                });
            }
        }

        document.getElementsByClassName("init-get")[0].addEventListener('click', generatecode);
        document.getElementsByClassName("init-resend")[0].addEventListener('click', generatecode);

        document.getElementById("smscode").addEventListener('keyup', function () {
            if (this.value.length == 6) {
                document.getElementsByClassName("init-code")[0].disabled = false;
            }
            else {
                document.getElementsByClassName("init-code")[0].disabled = true;
            }
        });

        var insertPage = function (tt) {
            var m = document.getElementById("modalPgs");
            var cnt = m.getElementsByClassName("collection")[0];
            var cn = document.createElement("p");
            cn.classList.add("collection-item");
            cn.style.textAlign = "center";
            //cn.innerHTML = '<a target="_blank" href="/Home/Page/' + tt.PageUrl + '"><span class="title" style="padding-right:50px;">' + tt.PageName || 'No Name' + '</span> </a>' + '<label><input type="checkbox" /><span>Secure</span></label>';
            //cn.innerHTML = '<input type="checkbox" /> <a target="_blank" href="/Home/Page/' + tt.PageUrl + '"> <p>' + (tt.PageName || 'No Name') + '</p></a>';
            var ti = document.createElement("a");
            ti.innerHTML = tt.PageName || 'No Name';
            ti.href = "/Home/Page/" + tt.PageUrl;
            ti.setAttribute("target", "_blank");
            ti.style.paddingRight = "50px";
            cn.appendChild(ti)

            var tc = document.createElement("label");
            tc.onclick = secureCheck;
            tc.innerHTML = '<input type="checkbox" /><span>Secure</span> <br /><br />';
            cn.appendChild(tc);

            var tsp = document.createElement("span");
            //tsp.style.paddingLeft = "30px";
            tsp.innerHTML = 'Created At (' + tt.CreatedAt + ')';
            cn.appendChild(tsp);

            var dv = document.createElement("div");
            dv.classList.add("sec-cont");
            dv.style.textAlign = "center";
            dv.style.display = "none";
            dv.style.paddingTop = "8px";
            //dv.innerHTML = '<input type="text" placeholder="add mobile nos to be allowed" style="border: ridge;width: 99%;"> <input type="button" value="Update">';
            cn.appendChild(dv);

            var dtx = document.createElement("input");
            dtx.classList.add("sec-input-allow");
            dtx.setAttribute("type", "text");
            dtx.setAttribute("placeholder", "add mobile nos to be allowed");
            dtx.style.width = "98%";
            dtx.style.borderStyle = "ridge";
            dtx.value = tt.AllowedMobiles;
            dv.appendChild(dtx);

            var dtb = document.createElement("input");
            dtb.setAttribute("type", "button");
            dtb.setAttribute("value", "Update");
            dv.appendChild(dtb);
            dtb.onclick = function () {
                var btu = dtb.closest(".sec-cont").getElementsByClassName("sec-input-allow")[0];
                tt.AllowedMobiles = btu.value;
                updatePage(tt);
            }

            cnt.appendChild(cn);
            a7(cn).setData("data-page", tt);
        }

        var updatePage = function (tt) {
            var ret = ph.validate(document.getElementById("phoneNumber").value || "");
            tt.Mobile = ret.phn;
            fetch(apiurl + '/api/page/update', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(tt)
            }).then(resp1 => {
                return resp1.json();
                }).then(resp1 => {
                    console.log(resp1);
            });
        }

        document.getElementsByClassName("init-code")[0].addEventListener('click', function () {
            prginst.open();
            var ret = ph.validate(document.getElementById("phoneNumber").value || "");
            fetch(apiurl + '/api/verify/' + encodeURIComponent((ret.ccd.dial_code || '').split('+').join('')) + '/' + encodeURIComponent(ret.cry) + '/' + encodeURIComponent(ret.phn) + '/' + document.getElementById("smscode").value).then(resp => {
                return resp.json();
            }).then(resp => {
                if (resp.Error) {
                    prginst.close();
                    cdinst.open();
                }
                else {
                    fetch(apiurl + '/api/page/get/' + ret.phn).then(resp => {
                        return resp.json();
                    }).then(resp => {
                        (resp || []).forEach(tt => {
                            insertPage(tt);
                        });
                        prginst.close();
                        pginst.open();
                    });
                }
            });
        });

        var secureCheck = function (evt) {
            if (evt.target && evt.target.nodeName == 'INPUT') {
                console.log(evt.target.checked);
                var ti = evt.target.closest(".collection-item");
                var th = ti.getElementsByClassName("sec-cont")[0];
                var dtt = a7(ti).getData("data-page");
                if (evt.target.checked) {
                    th.style.display = "";
                    dtt.Secured = true;
                } else {
                    th.style.display = "none";
                    dtt.Secured = false;
                }
                updatePage(dtt);
            }
        }

        document.getElementById("createNew").addEventListener("click", function () {
            var ret = ph.validate(document.getElementById("phoneNumber").value || "");
            var wpage = {
                Mobile: ret.phn,
                PageUrl: createGuid()
            }
            fetch(apiurl + '/api/page/create', {
                method: 'POST',
                headers: {
                    'Accept': 'application/json',
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(wpage)
            }).then(resp1 => {
                return resp1.json();
                }).then(resp1 => {
                    insertPage(resp1.NewPage);
                var a = document.createElement('a');
                a.href = "/Home/Page/" + wpage.PageUrl;
                a.setAttribute("target", "_blank");
                a.click();
                //window.open("/Home/Page/" + createGuid(), '_blank');
            });
