<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
	<style name="chatListItemName">
	    <item name="android:textColor">#5A5A5C</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="chatListItemDate">
	    <item name="android:textColor">@color/chatListItemHints</item>
	    <item name="android:textSize">11sp</item>
	</style>
	<style name="chatListItemHints">
	    <item name="android:textColor">@color/chatListItemHints</item>
	    <item name="android:textSize">13sp</item>
	</style>
	<style name="chatListItemNewCount">
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textSize">12sp</item>
	    <item name="android:background">@drawable/bg_chat_item_new_count</item>
	</style>
	<style name="chatBubbleLeft">
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#45484D</item>
	</style>
	<style name="chatBubbleRight">
	    <item name="android:textSize">12sp</item>
	    <item name="android:textColor">#45484D</item>
	</style>
	<style name="drawerListItem">
	    <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
	    <item name="android:textColor">@color/chatListItemHints</item>
	    <item name="android:layout_marginTop">10dp</item>
	    <item name="android:layout_marginBottom">10dp</item>
	</style>
	<style name="drawerListItemIcon">
	    <item name="android:layout_marginLeft">12dp</item>
	    <item name="android:layout_marginRight">12dp</item>
	    <item name="android:layout_width">25dp</item>
	</style>
	<style name="profileName">
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="profileLastSeenAndStatus">
	    <item name="android:textColor">#90FFFFFF</item>
	    <item name="android:textSize">13sp</item>
	</style>
	<style name="profileContactCard">
	    <item name="android:layout_margin">5dp</item>
	    <item name="android:padding">5dp</item>
	</style>
	<style name="button">
	    <item name="android:background">@drawable/bg_button</item>
	    <item name="android:layout_margin">5dp</item>
	</style>
</resources>
